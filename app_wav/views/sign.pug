extends _base.pug
block title 
  title Sign in
block content 
  main
    .uk-section.uk-section-muted.uk-flex.uk-flex-middle.uk-animation-fade(uk-height-viewport='')
      .uk-width-1-1
        .uk-container
          .uk-grid-margin.uk-grid-stack(uk-grid='' class='uk-width-1-1@m')
            .uk-margin.uk-width-large.uk-margin-auto.uk-card.uk-card-default.uk-card-body.uk-box-shadow-large
              ul.uk-tab.uk-flex-center(uk-grid='' uk-switcher='')
                li
                  a(href='#') Sign Up
                |                     
                li
                  a(href='#') Log In
                |                     
                li.uk-hidden Forgot Password?
              |                   
              ul.uk-switcher.uk-margin
                li
                  h3.uk-card-title.uk-text-center
                    | Sign up today. It&apos;s free!
                  |                       
                  form
                    .uk-margin
                      .uk-inline.uk-width-1-1
                        span.uk-form-icon(uk-icon='icon: user')
                        |                             
                        input.uk-input.uk-form-large(id="signUPName" type='text' placeholder='First and last name')
                    |                         
                    .uk-margin
                      .uk-inline.uk-width-1-1
                        span.uk-form-icon(uk-icon='icon: mail')
                        |                             
                        input.uk-input.uk-form-large(type='text' placeholder='Email address' id="signUPEmail")
                    |                         
                    .uk-margin
                      .uk-inline.uk-width-1-1
                        span.uk-form-icon(uk-icon='icon: lock')
                        |                             
                        input.uk-input.uk-form-large(type='password' placeholder='Set a password' id="signUPPassword")
                    |                         
                    .uk-margin
                      .uk-inline.uk-width-1-1
                        span.uk-form-icon(uk-icon='icon: lock')
                        |                             
                        input.uk-input.uk-form-large(type='password' placeholder='Confirm your password' id="signUPConfirmPassword")
                    |                         
                    .uk-margin.uk-grid-small.uk-child-width-auto.uk-grid
                      label
                        input.uk-checkbox(type='checkbox' required)
                        |  I
                        | agree to press this button.
                    |                         
                    .uk-margin
                      p.uk-button.uk-button-primary.uk-button-large.uk-width-1-1(onclick="signUp()")
                        | Sign Up
                    |                         
                    .uk-text-small.uk-text-center
                      | Already have an account?
                      a(href='#' uk-switcher-item='1') Log in
                |                     
                li
                  h3.uk-card-title.uk-text-center
                    | Welcome back!
                  |                       
                  form
                    .uk-margin
                      .uk-inline.uk-width-1-1
                        span.uk-form-icon(uk-icon='icon: mail')
                        |                             
                        input.uk-input.uk-form-large(type='text' placeholder='Email address' id="loginEmail")
                    |                         
                    .uk-margin
                      .uk-inline.uk-width-1-1
                        span.uk-form-icon(uk-icon='icon: lock')
                        |                             
                        input.uk-input.uk-form-large(type='password' placeholder='Password' id="loginPassword")
                    |                         
                    .uk-margin.uk-text-center.uk-text-small(class='uk-text-right@s')
                      a(href='#' uk-switcher-item='2') Forgot Password?
                    |                         
                    .uk-margin
                      p.uk-button.uk-button-primary.uk-button-large.uk-width-1-1(id="loginButton" onclick="login()")
                        | Login
                    |                         
                    .uk-text-small.uk-text-center
                      | Not registered?
                      a(href='#' uk-switcher-item='0') Create an account
                |                     
                li
                  h3.uk-card-title.uk-text-center
                    | Forgot your password?
                  |                       
                  p.uk-text-center.uk-margin-auto(class='uk-width-medium@s')
                    | Enter your email address and we will send you a link to
                    | reset your password.
                  |                       
                  form
                    .uk-margin
                      .uk-inline.uk-width-1-1
                        span.uk-form-icon(uk-icon='icon: mail')
                        |                             
                        input.uk-input.uk-form-large(type='text' placeholder='Email address' id="forgotPasswordEmail")
                    |                         
                    .uk-margin
                      p.uk-button.uk-button-primary.uk-button-large.uk-width-1-1(id="sendEmail" onclick="forgotPassword()")
                        | Send Email
                    |                         
                    .uk-text-small.uk-text-center
                      a(href='#' uk-switcher-item='1') Back to login
