extends _base.pug
mixin music(track)
  .uk-padding-small
    .uk-box-shadow-hover-large.uk-card.uk-card-default.uk-card-body.uk-padding-remove
      .uk-text-center.uk-background-secondary.uk-light.uk-padding-small
        h3(style='margin: auto 0')  #{track.license}
      |                   
      .uk-padding-remove
      | !{track.link}

      .uk-text-center
        a(style="color:black;" href=track.linkPurchase)
          span( uk-icon='icon: cart; ratio: 2;')     
      .uk-text-center
        a.uk-link-muted(href='./tag')
        |                     
        p.tags
          b 
            each tag in track.tags 
              a(href='?tags='+tag) ##{tag} 

block title 
  title WAV music
block content  
  main
    .uk-section-default
      .uk-section.uk-light.uk-background-cover.uk-section-xlarge(style='\
      background: url(dest/images/hero2.jpg) center center no-repeat;\
      text-align: center;\
      background-size: cover;\
      ')
        .uk-container
          h1(style="\
          font-size: 5em;\
          font-weight: 700;\
          font-family: 'Fjalla One', sans-serif;\
          letter-spacing: 0.2em;\
          ")
            | PRODUCED BY WAV STUDIO
          |             
          hr.uk-divider-icon
          |             
          a(style='\
          opacity: 0.8;\
          font-size: 1.3em;\
          cursor: pointer;\
          letter-spacing: 0.2em;\
          ', uk-scroll='', href='#target') Subscribe for new beats
    |       
    section.uk-section.uk-section-medium
      .uk-container
        h2.uk-text-center Shout out Mari
        |           
        .uk-card.uk-card-default.tm-ignore-container
          .uk-padding-small.uk-grid-small(style='margin: 0' class='uk-child-width-1-4@m' uk-grid='')
            each m in musicsDB
              +music(m)

  |     
  include _subscribe
  include _ourTerms                
  script. 
    for (element of document.getElementsByTagName('iframe')) {
    element.style.height = '166px';
      }